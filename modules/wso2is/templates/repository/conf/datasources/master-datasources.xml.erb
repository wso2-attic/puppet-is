                    <defaultAutoCommit><%= @wso2_identity_db['default_auto_commit'] %></defaultAutoCommit>
                </configuration>
            </definition>
        </datasource>

        <datasource>
            <name><%= @wso2_consent_db['name'] %></name>
            <description>The datasource used for consent management</description>
